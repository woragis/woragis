# API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000

# API Key Authentication (for mobile app access)
API_KEY=mobile-key-1
API_KEY_HEADER=X-API-Key

# Authentication
AUTH_TOKEN_KEY=auth_token
REFRESH_TOKEN_KEY=refresh_token
USER_DATA_KEY=user_data

# App Configuration
APP_NAME=Woragis
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Environment
ENVIRONMENT=development
DEBUG_MODE=true

# Storage Configuration
STORAGE_TYPE=local
UPLOAD_ENDPOINT=/uploads

# Offline Configuration
OFFLINE_CACHE_ENABLED=true
OFFLINE_CACHE_SIZE_MB=100
OFFLINE_CACHE_DURATION_DAYS=7

# Query Configuration
QUERY_STALE_TIME_MINUTES=5
QUERY_CACHE_TIME_MINUTES=10
QUERY_RETRY_ATTEMPTS=3

# Notifications
NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=false

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_DEBUG_MODE=false

# Feature Flags
FEATURE_BLOG=true
FEATURE_PROJECTS=true
FEATURE_ABOUT=true
FEATURE_MONEY=true
FEATURE_EDUCATION=true
FEATURE_EXPERIENCE=true
FEATURE_FRAMEWORKS=true
FEATURE_TESTIMONIALS=true
FEATURE_ADMIN=false

# UI Configuration
DEFAULT_THEME=system
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,it,ja,ko,pt,zh

# Security
ENCRYPTION_ENABLED=true
BIOMETRIC_AUTH_ENABLED=false

# Development
LOG_LEVEL=debug
NETWORK_LOGGING=true
